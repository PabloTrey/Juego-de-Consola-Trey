bool confirmarSalida()
{
    char respuesta;
    do
    {
        cout << "┬┐Seguro que desea salir? (S/N): ";
        cin >> respuesta;
        respuesta = toupper(respuesta);
    }
    while (respuesta != 'S' && respuesta != 'N');

    return (respuesta == 'S');
}


